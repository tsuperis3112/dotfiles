# af-magic.zsh-theme
#
# Author: Andy Fleming
# URL: http://andyfleming.com/

prompt_color="%F{250}"
curdir_color="%F{034}"
secondary_color="%F{240}"

# dashed separator size
export VIRTUAL_ENV_DISABLE_PROMPT=1

function statusline {
  local code="$?"
  local rmargin=$COLUMNS

  rmargin=$(( rmargin - 3 - ${#code} ))
  if [ $code -eq 0 ]; then
      code="%F{green}$code%f"
  else
      code="%F{red}%B$code%f%b"
  fi

  local hhmmss="$(date +"%H:%M:%S")"
  rmargin=$(( rmargin - 11 ))

  local elements=("$code" "$hhmmss")

  local info="${secondary_color}"
  for i in {1..$#elements}; do
      info+="[${elements[$i]}${secondary_color}]-"
  done

  echo "${info}${(l.rmargin..-.)}%f"
}

# primary prompt: dashed separator, directory and vcs info
PROMPT="\$(statusline)
${curdir_color}%B%~%f%b \$(git_prompt_info2)${prompt_color}%(!.#.$) %f"
PROMPT2="${prompt_color}> %f"

RPROMPT="${secondary_color}%B%n@%m%b%f"

# git settings
#ZSH_THEME_GIT_PROMPT_PREFIX=" ${FG[075]}(${FG[078]}"
#ZSH_THEME_GIT_PROMPT_CLEAN=""
