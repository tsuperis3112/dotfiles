#ZSH_THEME_GIT_PROMPT_SUFFIX="${FG[075]})%{$reset_color%}"

# git prompt
function git_prompt_info2() {
  # If we are on a folder not tracked by git, get out.
  # Otherwise, check for hide-info at global and local repository level
  if ! __git_prompt_git rev-parse --git-dir &> /dev/null \
     || [[ "$(__git_prompt_git config --get oh-my-zsh.hide-info 2>/dev/null)" == 1 ]]; then
    return 0
  fi

  local ref
  ref=$(__git_prompt_git symbolic-ref --short HEAD 2> /dev/null)
  if [ -z "$ref" ]; then
      ref=$(__git_prompt_git describe --tags --exact-match HEAD 2> /dev/null)
      if [ -n "$ref"]; then
          ref="tag:$ref"
      else
        ref=$(__git_prompt_git rev-parse --short HEAD 2> /dev/null)
      fi
  fi

  [ -z "$ref" ] && return 0

  echo "${ZSH_THEME_GIT_PROMPT_PREFIX}%B%F{063}${ref:gs/%/%%}%b%f$(git_prompt_status)${ZSH_THEME_GIT_PROMPT_SUFFIX}"
}

#ZSH_THEME_GIT_PROMPT_CACHE=true
ZSH_THEME_GIT_PROMPT_PREFIX="%f%b("
ZSH_THEME_GIT_PROMPT_SUFFIX=")"
ZSH_THEME_GIT_PROMPT_UNTRACKED="%F{009}?%f"
ZSH_THEME_GIT_PROMPT_ADDED="%F{010}+%f"
ZSH_THEME_GIT_PROMPT_MODIFIED="%F{213}*%f"
ZSH_THEME_GIT_PROMPT_RENAMED="%F{111}~%f"
ZSH_THEME_GIT_PROMPT_DELETED="%F{094}-%f"
ZSH_THEME_GIT_PROMPT_UNMERGED=""
ZSH_THEME_GIT_PROMPT_AHEAD=">"
ZSH_THEME_GIT_PROMPT_BEHIND="<"
ZSH_THEME_GIT_PROMPT_DIVERGED="%F{124}<>%f"
ZSH_THEME_GIT_PROMPT_STASHED="%F{027}..%f"

